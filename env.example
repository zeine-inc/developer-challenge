# ========================================
# CONFIGURAÇÕES DO MARKETPLACE
# ========================================

# ========================================
# BANCO DE DADOS
# ========================================
DATABASE_URL=postgresql://admin:secret123@localhost:5432/marketplace

# ========================================
# JWT - AUTENTICAÇÃO
# ========================================
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# CLOUDINARY - UPLOAD DE IMAGENS
# ========================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ========================================
# CORS - ORIGENS PERMITIDAS
# ========================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://frontend:3000

# ========================================
# REDIS - CACHE (OPCIONAL)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================
APP_NAME=Marketplace API
DEBUG=true
MAX_FILE_SIZE=10485760
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
RATE_LIMIT_PER_MINUTE=60

# ========================================
# FRONTEND - NEXT.JS
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name

# ========================================
# PRODUÇÃO - ALTERAR PARA PRODUÇÃO
# ========================================
# DATABASE_URL=postgresql://user:password@host:port/database
# SECRET_KEY=your-production-secret-key
# CORS_ORIGINS=https://your-frontend-domain.vercel.app
# NEXT_PUBLIC_API_URL=https://your-backend-domain.onrender.com
